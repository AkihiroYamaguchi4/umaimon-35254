<%= render "shared/header2" %>

<div class="registrations-main">
  <div class="title">
     <h2>ご利用者様情報の登録</h2>
   </div>
  <div class="form-wrap">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
      <%= render "users/shared/error_messages", resource: resource %>
    
      <div class="field">
        <label class="form-text">ニックネーム</label>
        <%= f.text_area :user_nickname, autofocus: true, autocomplete: ":user_nickname" %>
      </div>
      <div class="field">
        <label class="form-text">名字（姓）</label><br />
        <%= f.text_area :user_family_name, autofocus: true, autocomplete: ":user_family_name" %>
      </div>
      
      <div class="field">
        <label class="form-text">名前（名）</label><br />
        <%= f.text_area :user_first_name, autofocus: true, autocomplete: ":user_first_name" %>
      </div>

      <div class="field">
        <label class="form-text">メールアドレス</label><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      

      <div class="field">
        <% if @minimum_password_length %>
        <em>パスワード(半角<%= @minimum_password_length %> 文字)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
      <label class="form-text">パスワード(確認)</label><br />

        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    <div class='input-birth-wrap'>
        <label class="form-text">生年月日</label><br />
          <%= raw sprintf(
                      f.date_select(
                        :user_birth_id,
                        class:'select-birth',
                        id:"birth-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 1930,
                        end_year: (Time.now.year - 5),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
</div>
  <%= render "users/shared/links" %>
