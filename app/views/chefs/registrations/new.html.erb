<h2>Wi!Chef!!</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "chefs/shared/error_messages", resource: resource %>
 
  <div class="field">
    <%= f.label :chef_nickname %><br />
    <%= f.email_field :chef_nickname, autofocus: true, autocomplete: "chef_nickname" %>
  </div>

  <div class="field">
    <%= f.label :chef_family_name %><br />
    <%= f.email_field :chef_family_name, autofocus: true, autocomplete: ":chef_family_name" %>
  </div>
  
  <div class="field">
    <%= f.label :chef_first_name %><br />
    <%= f.email_field :chef_first_name, autofocus: true, autocomplete: ":chef_first_name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :belong %><br />
    <%= f.email_field :belong, autofocus: true, autocomplete: "belong" %>
  </div>

  <div class="field">
    <%= f.label :chef_phone_number %><br />
  <%= f.email_field :chef_phone_number, autofocus: true, autocomplete: "chef_phone_number" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
<div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :chef_birth_id,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "chefs/shared/links" %>
